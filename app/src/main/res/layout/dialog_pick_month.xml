<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_dialog">

    <RelativeLayout
        android:id="@+id/toolbar_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgroud_top">

        <ImageView
            android:id="@+id/cancel_dialog"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:padding="7dp"
            app:tint="@color/white"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@id/cancel_dialog"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tháng hiện tại"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buton_layout"
        android:layout_below="@id/toolbar_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/previous_btn"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_previous"/>

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2021"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/background_bottom"
        android:layout_below="@id/buton_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">
        <GridLayout
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:focusedByDefault="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button1"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th1"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="16sp"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button2"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th2"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button3"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th3"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button4"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th4"
                android:layout_column="3"
                android:layout_row="0"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button5"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th5"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="16sp"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button6"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th6"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="16sp"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button7"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th7"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button8"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th8"
                android:layout_column="3"
                android:layout_row="1"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button9"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th9"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button10"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th10"
                android:layout_column="1"
                android:layout_row="2"
                android:textSize="16sp"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button11"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th11"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="16sp"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:id="@+id/button12"
                android:layout_height="50dp"
                android:background="@drawable/background_button_number"
                android:text="Th12"
                android:layout_column="3"
                android:layout_row="2"
                android:textSize="16sp"
                android:textAllCaps="false"/>
        </GridLayout>
    </RelativeLayout>

</RelativeLayout>