<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <RelativeLayout
        android:padding="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/textDateTitle"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textMountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textDateTitle"
            android:gravity="bottom"
            android:padding="4dp"
            android:text="11.2022"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/textSpendingTitle"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textDateTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:text="100.000"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toStartOf="@+id/textSpendingTitle"
            android:layout_marginEnd="10dp"
            android:id="@+id/textCollectTitle"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textDateTitle"
            app:layout_constraintEnd_toStartOf="@id/textSpendingTitle"
            android:layout_width="wrap_content"
            android:text="100.000"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7568696B"
            android:layout_alignBottom="@id/textDateTitle"/>
    </RelativeLayout>


</RelativeLayout>